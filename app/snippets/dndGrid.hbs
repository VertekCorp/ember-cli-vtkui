{{!-- BEGIN-SNIPPET dndGrid --}}
{{#g-panel title="Drag and Drop Grid"}}
  {{#g-panel-body}}

    {{#g-grid onDragAndDrop="onDragAndDrop" sortField=sortField sortDir=sortDir content=model as |person|}}
      {{#g-grid-col heading="First Name" row=person sortPath="firstName"}}
        {{person.firstName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Middle Name" row=person}}
        {{person.middleName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Last Name" row=person sortPath="lastName"}}
        {{person.lastName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Birthday" row=person sortPath="bday"}}
        {{person.bday}}
      {{/g-grid-col}}
    {{/g-grid}}

  {{/g-panel-body}}
{{/g-panel}}
{{!-- END-SNIPPET--}}
