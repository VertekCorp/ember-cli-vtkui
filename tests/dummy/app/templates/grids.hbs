{{#g-panel title="Grids"}}
  {{#g-panel-body}}

    <table class="g-grid" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Middle Name</th>
          <th>Last Name</th>
          <th>Birthday</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |person|}}
          <tr>
            <td>{{person.id}}</td>
            <td>{{person.firstName}}</td>
            <td>{{person.middleName}}</td>
            <td>{{person.lastName}}</td>
            <td>{{person.bday}}</td>
          </tr>
        {{else}}
          <tr>
            <td colspan="5">No models found.</td>
          </tr>
        {{/each}}
      </tbody>
    </table>

  {{/g-panel-body}}
{{/g-panel}}
