{{#g-panel title="Regular Grid"}}
  {{#g-toolbar}}
    {{g-button text="Toolbar Button"}}
  {{/g-toolbar}}
  {{#g-panel-body}}

    {{#g-grid onDoubleClick="alertRow" sortField=sortField sortDir=sortDir content=model as |person|}}
      {{#g-grid-col heading="First Name" row=person sortPath="firstName"}}
        {{person.firstName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Middle Name" row=person}}
        {{person.middleName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Last Name" row=person sortPath="lastName"}}
        {{person.lastName}}
      {{/g-grid-col}}
      {{#g-grid-col heading="Birthday" row=person sortPath="bday"}}
        {{person.bday}}
      {{/g-grid-col}}
    {{/g-grid}}

    <hr/>

    {{#g-panel title="Example"}}
      {{#g-panel-body}}
        {{code-snippet name="grids.hbs"}}
      {{/g-panel-body}}
    {{/g-panel}}

  {{/g-panel-body}}
  {{#g-toolbar}}
    {{g-paginator offset=0 limit=25 total=4}}
  {{/g-toolbar}}
{{/g-panel}}

{{#g-panel title="Drag and Drop Grid"}}
  {{#g-toolbar}}
    {{g-button text="Toolbar Button"}}
  {{/g-toolbar}}
  {{#g-panel-body}}

    {{#g-editable-grid onDragAndDrop="onDragAndDrop" onDoubleClick="alertRow" sortField=sortField sortDir=sortDir content=model as |person|}}
      {{#g-editable-grid-col heading="First Name" row=person sortPath="firstName"}}
        {{person.firstName}}
      {{/g-editable-grid-col}}
      {{#g-editable-grid-col heading="Middle Name" row=person}}
        {{person.middleName}}
      {{/g-editable-grid-col}}
      {{#g-editable-grid-col heading="Last Name" row=person sortPath="lastName"}}
        {{person.lastName}}
      {{/g-editable-grid-col}}
      {{#g-editable-grid-col heading="Birthday" row=person sortPath="bday"}}
        {{person.bday}}
      {{/g-editable-grid-col}}
    {{/g-editable-grid}}

    <hr/>

    {{#g-panel title="Example"}}
      {{#g-panel-body}}
        {{code-snippet name="dndGrid.hbs"}}
      {{/g-panel-body}}
    {{/g-panel}}

  {{/g-panel-body}}
  {{#g-toolbar}}
    {{g-paginator offset=0 limit=25 total=4}}
  {{/g-toolbar}}
{{/g-panel}}
