{{#g-panel title="Inputs"}}
  {{#g-panel-body}}
    <form {{action "submit" on="submit"}}>
      <fieldset>
        <legend>Details</legend>
        {{g-input label="First Name" model=person path="firstName"}} <br>
        {{g-input label="Middle Name" model=person path="middleName"}} <br>
        {{g-input label="Last Name" model=person path="lastName"}} <br>
        {{g-date label="Birthday" model=person path="bday"}} <br>
        {{g-checkbox label="Likes Cats" checked=person.likesCats}}
        <br><br>
      </fieldset>

      <fieldset>
        <legend>Misc</legend>

        {{g-selectize label="Robot" content=robots optionLabelPath="name"
          selection=person.robot onChange=(action (mut person.robot)) model=person path="robot"}}
        <br>

        {{g-textarea label="Notes" model=person path="notes"}}

        {{g-selectize label="Make" content=carMakes optionLabelPath="name"
          onChange=(action "setCarModels") selection=selectedMake}} <br>
        {{g-selectize label="Model" content=selectedModels optionLabelPath="name"
          selection=selectedModel onChange=(action (mut selectedModel))}}
        <br><br>
      </fieldset>

      {{g-button type="submit" text="Save" disabled=person.validations.isInvalid}}
    </form>

    <hr>

    {{#g-panel title="Example"}}
      {{#g-panel-body}}
        {{code-snippet name="inputs.hbs"}}
      {{/g-panel-body}}
    {{/g-panel}}

  {{/g-panel-body}}
{{/g-panel}}
